{
  "name": "ecommerce-api-express",
  "version": "1.0.0",
  "description": "E-commerce API built with Express.js",
  "homepage": "https://github.com/DaniielDz/ecommerce-api-express#readme",
  "bugs": {
    "url": "https://github.com/DaniielDz/ecommerce-api-express/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaniielDz/ecommerce-api-express.git"
  },
  "license": "ISC",
  "author": "DaniielDz",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "test": "jest --runInBand",
    "prisma": "npx prisma migrate dev",
    "prisma:seed": "npx prisma db seed"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "dependencies": {
    "@prisma/client": "6.16.3",
    "bcrypt": "6.0.0",
    "cookie-parser": "1.4.7",
    "dotenv": "17.2.2",
    "express": "5.1.0",
    "jsonwebtoken": "9.0.2",
    "mercadopago": "2.11.0",
    "pg": "8.16.3",
    "prisma": "6.16.3",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@swc/core": "1.13.19",
    "@swc/jest": "0.2.39",
    "@types/bcrypt": "6.0.0",
    "@types/cookie-parser": "1.4.9",
    "@types/dotenv": "6.1.1",
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "24.5.2",
    "@types/supertest": "6.0.3",
    "jest": "30.1.3",
    "prettier": "3.6.2",
    "supertest": "7.1.4",
    "ts-node-dev": "2.0.0",
    "ts-standard": "12.0.2",
    "typescript": "5.9.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}